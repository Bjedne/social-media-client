{
  "name": "workflow",
  "version": "0.4.0",
  "description": "Package for the Workflow CA",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "prepare": "husky install",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-cli": "cypress run"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@eslint/js": "^9.0.0",
    "cypress": "^13.7.3",
    "eslint": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-jest": "^28.2.0",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "jest": "^29.2.0",
    "lint-staged": "^15.2.2",
    "live-server": "^1.1.0",
    "prettier": "^3.2.5",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bjedne/social-media-client.git"
  },
  "bugs": {
    "url": "https://github.com/Bjedne/social-media-client/issues"
  },
  "homepage": "https://github.com/Bjedne/social-media-client#readme",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
